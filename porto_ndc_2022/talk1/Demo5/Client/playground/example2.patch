+    onDropRejected: (fileRejections) => {
+      console.log('image drop rejected', fileRejections);
+    },
+  });
+
+  const displaynameRef = useRef(null);
+
+  useEffect(() => {
+    if (previewUrl) {
+      return () => {
+        URL.revokeObjectURL(previewUrl);
+      };
+    }
+  }, [previewUrl]);
+
